{% extends 'skeleton.twig' %}

{% set globalTitle = 'Features - StudioBookingsOnline | Yoga &amp; Fitness management software' %}
{% set globalDescripton = 'Looking for Yoga studio Software &amp; Pilates studio software? We provide the best, simplest and most timesaving way to manage your studio schedules.' %}

{% set metaTitle = globalTitle  %}
{% set metaDescription = globalDescripton %}

{% set ogTitle = globalTitle %}
{% set ogDescription = globalDescripton %}
{% set ogImage = 'images/og/studiobookings-features.png' %}

{% set twitterTitle = globalTitle %}
{% set twitterDescription = globalDescripton %}


{% block mainContent %}

    <section class="feature-intro">

        <div class="small-wrapper">

            <h1 class="headline-size-1 align-center">{{ entry.introHeadline }}</h1>

            <p class="_text align-center">{{ entry.introText }}</p>

            <div class="grid-wrapper">

                <div class="grid-box highlight-number">
                    <p>Get <span class="_number">10x</span> the value of other systems</p>
                </div>

                <div class="grid-box highlight-number">
                    <p>Just <span class="_number">25%</span> of the cost</p>
                </div>
            </div>

        </div>

    </section>


    {% embed 'parts/_features-content.twig' with {'content':entry}  %}{% endembed %}

{% endblock %}



{% block lastcta %}
    <div class="last-cta-box -with-testimonial wrapper">

        {% set footerTestimonial = entry.footerTestimonial.one() %}

        <div class="testimonial-small">

            <i class="icon-five-stars"></i>

            <blockquote class="quote">"{{ footerTestimonial.quote }}"</blockquote>

            <cite class="testimonial-giver">

                <figure class="_images">

                    {% for image in footerTestimonial.imagesPerson.all() %}

                        <img class="_tiny-thumbnail" src="{{ image.getUrl('tinyPersonThumbnail') }}" alt="{{ footerTestimonial.person }}">

                    {% endfor %}

                </figure>

                <strong>{{ footerTestimonial.person }}</strong> - {{ footerTestimonial.location }}

            </cite>
        </div>

        <div class="_buttons">
            <a href="signup" class="button-full" title="Try Us Free Now!">Try Us Free Now!</a>
            <a href="{{ videolink }}" data-width="640" data-ratio="16:9" data-fancybox class="button-simple" title="Watch the Video">Watch the Video <i class="icon-forward-arrow"><span class="last"></span></i></a>
        </div>
    </div>
{% endblock %}