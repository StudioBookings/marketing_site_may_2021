    {{  parent()  }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        function recaptchaSolved(){
            $('#recaptcha').val('solved');
        }
        function recaptchaReset(){
            $('#recaptcha').val('');
        }
    </script>
{% endblock %}